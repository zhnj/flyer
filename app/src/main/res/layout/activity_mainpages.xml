<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circleImageView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/driver_main"
    android:fitsSystemWindows="true"
    tools:context="com.njdp.njdp_drivers.mainpages">
        <com.njdp.njdp_drivers.CircleMenu.CircleMenuLayout
            android:id="@+id/id_menulayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/circleMenu_bottom">

            <RelativeLayout
                android:id="@id/id_circle_menu_item_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.njdp.njdp_drivers.CircleMenu.CircleImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true"

                    circleImageView:civ_border_width="2dp"
                    circleImageView:civ_border_color="#ffffff"/>
            </RelativeLayout>
        </com.njdp.njdp_drivers.CircleMenu.CircleMenuLayout>
</RelativeLayout>
