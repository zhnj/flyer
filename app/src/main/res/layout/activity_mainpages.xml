<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circleImageView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_login"
    android:fitsSystemWindows="true"
    tools:context="com.njdp.njdp_drivers.mainpages">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        />

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
        android:layout_weight="1"
        >
           <ImageView
               android:id="@+id/imageButton_release"
               android:background="#00000000"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_release_1"
               android:onClick="onDispatcher"
               android:layout_weight="1"
               />

           <ImageView
               android:id="@+id/imageButton_require"
               android:background="#00000000"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_require_1"
               android:onClick="onDispatcher"/>





           <ImageView
               android:id="@+id/imageButton_arrange"
               android:background="#00000000"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_intell_arrange_1"
               android:onClick="onDispatcher"
               android:layout_weight="1"
               />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            />

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
        android:layout_weight="1"
        >

           <ImageView
               android:id="@+id/imageButton_uav"
               android:background="#00000000"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:src="@drawable/uav"
               android:onClick="onDispatcher"
               android:layout_weight="1"
               />

           <ImageView
               android:id="@+id/imageButton_history"
               android:background="#00000000"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_job_history_1"
               android:onClick="onDispatcher"/>


         <ImageView
        android:id="@+id/imageButton_personal"
        android:background="#00000000"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_personal_info_1"
        android:onClick="onDispatcher"/>
    </LinearLayout>

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

    </LinearLayout>
</RelativeLayout>
