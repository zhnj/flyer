<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:id="@+id/xksqapp_register_student"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    android:fitsSystemWindows="true"
    android:paddingTop="@dimen/padding20"
    tools:context="com.njdp.njdp_drivers.register_2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/job_preferences_top"
        android:background="@drawable/main_title">
        <TextView
            style="@style/Pages_Title"
            android:text="作业偏好"
            />
    </RelativeLayout>
    <LinearLayout
        style="@style/Register_Div"
        android:orientation="vertical"
        android:id="@+id/regiser_div"
        android:layout_below="@+id/job_preferences_top"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <TextView
            style="@style/Register_style"
            android:id="@+id/textView"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="作业时长（小时）：" />
        <EditText
            style="@style/Register_style"
            android:layout_height="wrap_content"
            android:id="@+id/uavworktime"
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/login_edit_changecolor"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:hint="请输入作业时长"
            android:inputType="number"

            />
        </LinearLayout>


        <View
            style="@style/Register_HorizontalLine_style"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/Register_style"

            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="住宿成本（元/天）：" />
        <EditText
            style="@style/Register_style"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/uavhotelcost"
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/login_edit_changecolor"
            android:layout_marginLeft="5dp"
            android:hint="请输入住宿成本"
            android:inputType="number"

            />
        </LinearLayout>
        <View
            style="@style/Register_HorizontalLine_style"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/Register_style"

            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="人工成本（元）：" />
        <EditText
            style="@style/Register_style"
            android:id="@+id/uavlaborcost"
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/login_edit_changecolor"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="请输入人工成本"
            android:inputType="number"
            />
        </LinearLayout>
        <View
            style="@style/Register_HorizontalLine_style"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/Register_style"

            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="运输油耗（元/百公里）：" />
        <EditText
            style="@style/Register_style"
            android:id="@+id/uavrunfuel"
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/login_edit_changecolor"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="请输入运输油耗"
            android:inputType="number"
            />
        </LinearLayout>
        <View
            style="@style/Register_HorizontalLine_style"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/Register_style"

            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="作业成本（元/亩）：" />
        <EditText
            style="@style/Register_style"
            android:id="@+id/uavworkcost"
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/login_edit_changecolor"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="请输入作业成本"
            android:inputType="number"
            />
        </LinearLayout>
        <View
            style="@style/Register_HorizontalLine_style"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/Register_style"
            android:layout_width="210dp"

            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="运输速度（公里/小时）：" />
        <EditText
            style="@style/Register_style"
            android:id="@+id/uavrunvelocity"
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/login_edit_changecolor"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="请输入运输速度"
            android:inputType="number"
            />
        </LinearLayout>
        <View
            style="@style/Register_HorizontalLine_style"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Register_style"
                android:layout_marginTop="40dp"
                android:text="保存"
                android:onClick="onClick"
                android:layout_marginRight="119dp"
                android:layout_marginEnd="119dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>