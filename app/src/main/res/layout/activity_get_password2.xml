<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:fitsSystemWindows="true"
    android:paddingTop="@dimen/padding20"
    tools:context="com.njdp.njdp_drivers.get_password2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/forgetPassword2_top"
        android:background="@drawable/main_title">
        <TextView
            style="@style/Pages_Title"
            android:text="重置密码"
            />
        <ImageButton
            android:id="@+id/getBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_chevron_left_white_48dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/forgetPassword2_div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/forgetPassword2_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/forgetPassword2_password_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="请输入新的密码"
            android:textColor="@color/whiteFont"
            android:textSize="@dimen/font22"/>
        <EditText
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/login_edit_changecolor"
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin5"
            android:paddingBottom="@dimen/margin5"
            android:paddingRight="@dimen/margin25"
            android:layout_below="@id/forgetPassword2_password_input"
            android:singleLine="true"
            android:textColor="@color/whiteFont"
            android:inputType="textPassword" />
        <ImageButton
            android:id="@+id/reveal_button"
            android:onClick="revealClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_visibility_off_white_24dp"
            android:layout_marginBottom="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:layout_alignBottom="@+id/user_password"
            android:layout_alignRight="@+id/user_password"
            android:layout_alignEnd="@+id/user_password" />
        <ImageButton
            android:id="@+id/show_button"
            android:onClick="showClick"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_visibility_white_24dp"
            android:layout_marginBottom="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:layout_alignBottom="@+id/user_password"
            android:layout_alignRight="@+id/user_password"
            android:layout_alignEnd="@+id/user_password" />
        <TextView
            android:id="@+id/forgetPassword2_password2_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_password"
            android:layout_marginTop="5dp"
            android:text="请再次输入密码"
            android:textColor="@color/whiteFont"
            android:textSize="@dimen/font22"/>
        <EditText
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/login_edit_changecolor"
            android:id="@+id/user_password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin5"
            android:paddingBottom="@dimen/margin5"
            android:paddingRight="@dimen/margin25"
            android:layout_below="@id/forgetPassword2_password2_input"
            android:singleLine="true"
            android:textColor="@color/whiteFont"
            android:inputType="textPassword" />
        <ImageButton
            android:id="@+id/reveal_button2"
            android:onClick="revealClick2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_visibility_off_white_24dp"
            android:layout_marginBottom="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:layout_alignBottom="@+id/user_password2"
            android:layout_alignRight="@+id/user_password2"
            android:layout_alignEnd="@+id/user_password2" />
        <ImageButton
            android:id="@+id/show_button2"
            android:onClick="showClick2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_visibility_white_24dp"
            android:layout_marginBottom="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:layout_alignBottom="@+id/user_password2"
            android:layout_alignRight="@+id/user_password2"
            android:layout_alignEnd="@+id/user_password2" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/finish"
            android:layout_below="@+id/user_password2"
            android:text="下一步"
            android:layout_marginTop="@dimen/margin50"
            android:layout_marginLeft="@dimen/margin50"
            android:layout_marginRight="@dimen/margin50"
            bootstrap:bootstrapBrand="secondary"
            bootstrap:bootstrapSize="xl"
            bootstrap:buttonMode="regular"
            bootstrap:showOutline="false"
            bootstrap:roundedCorners="true"/>
    </RelativeLayout>
</RelativeLayout>
