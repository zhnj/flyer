<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/main_bg"
    tools:context="com.njdp.njdp_drivers.items.item_intelligent_resolution_3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/intelligent_arrange_top"
        android:layout_marginTop="@dimen/margin20"
        android:background="@drawable/main_title">
        <TextView
            style="@style/Pages_Title"
            android:text="飞哪儿好"
            />
        <ImageButton
            android:id="@+id/getback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_chevron_left_white_48dp"
            />
        <ImageButton
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_menu_white_48dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/intelligent_arrange_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/intelligent_arrange_top"
        android:layout_above="@+id/intelligent_arrange_bottom">
        <com.baidu.mapapi.map.TextureMapView
            android:id="@+id/diaopeimapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />
        <ImageButton
            android:id="@+id/my_deploy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_local_offer_grey600_36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginBottom="@dimen/margin60"/>
        <ImageButton
            android:id="@+id/my_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_my_locationt"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/margin10"
            android:layout_marginLeft="@dimen/margin20"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/intelligent_arrange_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_title"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/whiteFont"
            android:textSize="@dimen/font18"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/margin5"
            android:text="开始导航"/>
        <Button
            android:id="@+id/replanning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin5"
            android:textColor="@color/whiteFont"
            android:textSize="@dimen/font18"
            android:text="重新规划"/>
    </RelativeLayout>
</RelativeLayout>
