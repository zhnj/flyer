<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:fitsSystemWindows="true"
    android:paddingTop="@dimen/padding20"
    tools:context="com.njdp.njdp_drivers.get_password">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/get_password_top"
        android:background="@drawable/main_title">
        <TextView
            style="@style/Pages_Title"
            android:text="找回密码"
            />
        <ImageButton
            android:id="@+id/getBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_chevron_left_white_48dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/get_password_div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="@dimen/margin5"
        android:layout_below="@+id/get_password_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:visibility="gone"
            android:id="@+id/driver_user_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="请输入农机编号"
            android:textColor="@color/whiteFont"
            android:textSize="@dimen/font22"/>
        <EditText
            android:visibility="gone"
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/login_edit_changecolor"
            android:id="@+id/user_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteFont"
            android:paddingTop="@dimen/margin10"
            android:paddingBottom="@dimen/margin10"
            android:layout_below="@id/driver_user_input"
            android:singleLine="true"
            android:inputType="number" />
        <TextView
            android:id="@+id/driver_telephone_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_username"
            android:layout_marginTop="@dimen/margin5"
            android:text="请输入手机号"
            android:textColor="@color/whiteFont"
            android:textSize="@dimen/font20"/>
        <EditText
            android:id="@+id/user_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteFont"
            android:paddingTop="@dimen/margin5"
            android:paddingBottom="@dimen/margin5"
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/login_edit_changecolor"
            android:layout_below="@id/driver_telephone_input"
            android:singleLine="true"
            android:inputType="phone"
            android:maxLength="11"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/user_verification_code"
            android:layout_below="@+id/user_telephone">
            <EditText
                android:textCursorDrawable="@drawable/login_cursor"
                android:background="@drawable/register_edit"
                android:id="@+id/user_VerifyCode"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingTop="@dimen/margin5"
                android:paddingBottom="@dimen/margin5"
                android:textColor="@color/whiteFont"
                android:drawableLeft="@drawable/ic_vpn_key_white_24dp"
                android:drawablePadding="@dimen/padding5"
                android:hint="验证码"
                android:textColorHint="@color/whiteFont"
                android:maxLength="6"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:inputType="number"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="#808080"
                android:layout_margin="10dp"
                android:layout_toStartOf="@+id/btn_get_verificationCode"
                android:layout_toLeftOf="@+id/btn_get_verificationCode"
                android:id="@+id/line" />
            <Button
                style="@style/Register_Button_Vertify"
                android:id="@+id/btn_get_verificationCode"
                android:layout_centerInParent="true"
                android:text="获取验证码"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="#728ea3"
            android:layout_below="@+id/user_verification_code"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height55"
        android:id="@+id/get_password_bottom"
        android:layout_alignParentBottom="true">
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_getPassword_next"
            android:text="下一步"
            android:textSize="@dimen/font18"
            android:layout_marginRight="@dimen/margin10"
            android:layout_marginBottom="@dimen/margin15"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            bootstrap:bootstrapBrand="secondary"
            bootstrap:bootstrapSize="lg"
            bootstrap:buttonMode="regular"
            bootstrap:showOutline="false"
            bootstrap:roundedCorners="true"/>
    </RelativeLayout>
</RelativeLayout>
