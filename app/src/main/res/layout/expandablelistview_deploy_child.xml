<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding10"
    android:background="@drawable/expand_parent_bg"
    android:layout_marginTop="@dimen/margin15"
    android:layout_marginLeft="@dimen/margin5"
    android:layout_marginRight="@dimen/margin5">
    <TextView
        android:id="@+id/cropLand_id"
        android:text="作业地点1"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/whiteFont"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/site"
        android:text="地址：河北省保定市徐水大庄乡"
        android:layout_marginTop="@dimen/margin5"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/whiteFont"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/telephone"
        android:text="17766668888"
        android:layout_marginTop="@dimen/margin5"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/whiteFont"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/fieldNumber"
        android:text="农田面积：50亩"
        android:layout_marginTop="@dimen/margin5"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/whiteFont"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/univalenc"
        android:text="单价：200/亩"
        android:layout_marginTop="@dimen/margin5"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/whiteFont"
        android:textSize="16dp"/>
</LinearLayout>

