<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/slideAnimation_left_right</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- animation 样式1 ,侧滑-->
    <style name="slideAnimation_left_right" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <!-- animation 样式2 底部滑出-->
    <style name="slideAnimation_bottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_out</item>
    </style>

    <!--侧滑菜单项样式-->
    <style name="SlideMenuItem_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:clickable">true</item>
    </style>

    <!--主页面标题-->
    <style name="Pages_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!--智能调度界面按钮-->
    <style name="item_1_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!--头部标题-->
    <style name="Top_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">#03601F</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!--登录头部-->
    <style name="Login_Top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <!--登录主体-->
    <style name="Login_Div">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">55dp</item>
        <item name="android:padding">15dp</item>
    </style>
    <!--登录底部-->
    <style name="Login_Bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <!--登录输入框标题-->
    <style name="Login_InputTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">22dp</item>
    </style>
    <!--登录输入框-->
    <style name="Login_Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <!--登录页面注册按钮-->
    <style name="Login_BtnRegister">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#03601F</item>
    </style>
    <!--登录页面忘记密码按钮-->
    <style name="Login_BtnForgetPassword">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#696969</item>
        <item name="android:textSize">18dp</item>
    </style>
    <!--登录页面登录按钮-->
    <style name="Login_BtnLogin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">20dp</item>
    </style>
    <!--登录页面水平线样式-->
    <style name="Login_HorizontalLine_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#696969</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>


    <!--注册表单头部-->
    <style name="Register_Top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <!--注册表单主体-->
    <style name="Register_Div">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>
    <!--注册表单底部-->
    <style name="Register_Bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <!--注册表单底部文字-->
    <style name="Register_Bottom_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!--注册表单输入框样式-->
    <style name="Register_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    <!--注册表单验证码输入框样式-->
    <style name="Register_VertifyInput_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    <!--注册表单水平线样式-->
    <style name="Register_HorizontalLine_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#696969</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <!--注册表单垂直线样式-->
    <style name="Register_Vertical_style">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">#808080</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <!--注册表单获取验证码按钮-->
    <style name="Register_Button_Vertify">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <!--注册表单完成注册按钮-->
    <style name="Register_Button_Finish">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">140dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24dp</item>
    </style>

    <!--个人信息表单linearlayout样式-->
    <style name="personalinformation_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <!--个人信息表单.左-->
    <style name="personalinformation_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#F5F5F5</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">left</item>
    </style>
    <!--个人信息表单.右-->
    <style name="personalinformation_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <!--个人信息水平线-->
    <style name="personalinformation_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    <!--个人信息水平线-->
    <style name="personalinformation_line1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/grey_bg</item>
    </style>
    <!--个人信息水平线-->
    <style name="personalinformation_line2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/grey_bg</item>
    </style>

    <!--发布页面登录按钮-->
    <style name="release_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">20dp</item>
    </style>
    <!--发布界面隐藏的EditText-->
    <style name="release_hidden_editText">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">24dp</item>
    </style>
    <!--发布界面隐藏的EditText-->
    <style name="release_remark_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">20dp</item>
    </style>
    <!--发布界面隐藏的EditText2-->
    <style name="release_location_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--发布界面作物类型TextView-->
    <style name="release_t_cropType">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <!--发布界面作物类型CheckBox-->
    <style name="release_check1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/checkbox_on_off_2</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <!--发布界面作物类型CheckBox-->
    <style name="release_check2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/checkbox_on_off_2</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <!--发布界面显示日期的TextView-->
    <style name="release_date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--智能调度界面时间窗-->
    <style name="intelligentResolution_StartDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="intelligentResolution_EndDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <!--服务对象确定按钮-->
    <style name="Button_ServiceObj">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24dp</item>
    </style>

    <!--需求分析时间窗-->
    <style name="requirement_date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Spinner样式-->
    <style name="spinner_style_0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="spinner_style_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="spinner_style_intell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="spinner_style_require">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!--动画-->
    <style name="popWindow_animation">
        <item name="android:windowEnterAnimation">@anim/popupwindow_enter</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_exit</item>
    </style>
    <style name="popWindow_fade">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>